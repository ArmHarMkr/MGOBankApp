@using MGOBankApp.Domain.Entity
@using MGOBankApp.Domain.Roles
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MGOBankAp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MGOBankAp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MGOBankAp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <a class="nav-link text-dark" asp-action="AllOrders" asp-controller="ServiceOrder">Service Lists</a>
                    </ul>
                </div>
            </div>
            @if (SignInManager.IsSignedIn(User))
            {
                var currentUser = await UserManager.GetUserAsync(User);
                var isAdmin = await UserManager.IsInRoleAsync(currentUser, SD.Role_Admin);
                var isTaxEmployee = await UserManager.IsInRoleAsync(currentUser, SD.Role_TaxEmployee);
                var isBillEmployee = await UserManager.IsInRoleAsync(currentUser, SD.Role_BillEmployee);
                var isCreditEmployee = await UserManager.IsInRoleAsync(currentUser, SD.Role_CreditEmployee);
                var isCustomer = await UserManager.IsInRoleAsync(currentUser, SD.Role_Customer);

                @if (isAdmin)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-action="AllUsers" asp-controller="Employee">Role Management</a>
                        </li>
                        @*Adding other pages only for admin*@
                    </ul>
                }
                @if (isTaxEmployee)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Employee" asp-action="TaxServices" asp-controller="Employee">Role Management</a>
                        </li>
                        @*TODO: Change action names and add actions*@
                        @*Adding other pages only for tax managers*@
                    </ul>
                }
                @if (isBillEmployee)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Employee" asp-action="BillServices" asp-controller="Employee">Role Management</a>
                        </li>
                        @*TODO: Change action names and add actions*@
                        @*Adding other pages only for bill managers*@
                    </ul>
                }
                @if (isCreditEmployee)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Employee" asp-action="CreditServices" asp-controller="Employee">Role Management</a>
                        </li>
                        @*TODO: Change action names and add actions*@
                        @*Adding other pages only for credit managers*@
                    </ul>
                }
            }
            <partial name="_LoginPartial.cshtml"></partial>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
