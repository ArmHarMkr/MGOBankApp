@using MGOBankApp.Domain.Entity
@using MGOBankApp.Domain.Roles
@using Microsoft.AspNetCore.Identity
@model IEnumerable<OrderTicketEntity>
@inject UserManager<AppUser> userManager

<h1>Welcome Credit Employee</h1>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Count() == 0)
{
    <h1>No order found</h1>
}
else
{
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Order Person Name</th>
                <th scope="col">Order Person Email</th>
                <th scope="col">Time</th>
                <th scope="col">Order Type</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderTicketId</td>
                    <td>@order.AppUser.FullName</td>
                    <td>@order.AppUser.Email</td>
                    <td>@order.OrderDate</td>
                    <td>@order.OrderService.ToString() @order.OrderNumber </td>
                    <td>
                        <form asp-action="CheckOrder" asp-controller="ManageService" asp-route-id="@order.OrderTicketId">
                            <button type="submit">Manage Order</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}